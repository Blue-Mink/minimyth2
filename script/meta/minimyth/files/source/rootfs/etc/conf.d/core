################################################################################
# Core environment variables.
#
# This file contains non-MiniMyth evironment variables as well as MiniMyth
# evironment variables that are not user defined.
################################################################################

#-------------------------------------------------------------------------------
# General environment variables.
#-------------------------------------------------------------------------------
PATH='/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin:/usr/libexec:/usr/lib/qt5/bin'
export PATH

#-------------------------------------------------------------------------------
# Prompt environment variables.
#-------------------------------------------------------------------------------
PS1='\u@\h:\w \$ '

#-------------------------------------------------------------------------------
# Language variables.
#-------------------------------------------------------------------------------
LANG='en_US.UTF-8'

export LANG

#-------------------------------------------------------------------------------
# X environment variables.
#-------------------------------------------------------------------------------
DISPLAY=':0.0'
XINITRC='/etc/X11/xinit/xinitrc'
XSERVERRC='/etc/X11/xinit/xserverrc'
QT_PLUGIN_PATH=/usr/lib/qt5/plugins

export DISPLAY
export XINITRC
export XSERVERRC
export QT_PLUGIN_PATH

#-------------------------------------------------------------------------------
# Wayland environment variables.
#-------------------------------------------------------------------------------
XDG_SESSION_TYPE=tty
XDG_SESSION_CLASS=user

export XDG_SESSION_TYPE
export XDG_SESSION_CLASS

#-------------------------------------------------------------------------------
# Perl environment variables.
#-------------------------------------------------------------------------------
PERL_BADLANG=0

export PERL_BADLANG

#-------------------------------------------------------------------------------
# KDE environment variables.
#-------------------------------------------------------------------------------
KDE_HOME_READONLY=1
ICEAUTHORITY=${HOME}/.ICEauthority

export KDE_HOME_READONLY
export ICEAUTHORITY

#-------------------------------------------------------------------------------
# Myth environment variables.
#-------------------------------------------------------------------------------
# Hack described in <http://svn.mythtv.org/trac/changeset/19638/trunk>.
USE_VDPAU_COLORKEY=1

export USE_VDPAU_COLORKEY

#-------------------------------------------------------------------------------
# MiniMyth environment variables.
#-------------------------------------------------------------------------------
MM_VERSION='master-11.13.2.r2201'
MM_VERSION_MYTH='master'
MM_VERSION_MINIMYTH='11.13.2.r2201'
MM_CONF_VERSION='48'

export PAN_MESA_DEBUG=bifrost
