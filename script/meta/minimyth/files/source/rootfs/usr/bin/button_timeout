#!/bin/sh

trap "_exit_" 0 1 2 3 15

_exit_()
{
    ps -o ppid,pid,args \
    | sed -e 's%  *% %g' -e 's%^ %%' -e 's% $%%' \
    | grep "^$$ " \
    | grep '/bin/sleep [^ ]*$' \
    | cut -d ' ' -f 2 \
    | while read pid ; do
        kill $pid
    done
}

program=$2
timeout=$1

/bin/sleep $timeout
/bin/rm -fr /var/tmp/key_pressed_* 2>&1
$program &
exit
