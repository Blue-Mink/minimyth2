#!/bin/sh

. /etc/rc.d/functions

if [ "x${MM_MYTHTV_DRAW_ON}" = "xeglfs" ] ; then

    echo "Running in EGLFS so no terminal to kill!"
    /usr/bin/logger -t minimyth -p "local0.info" "[mm_term_exit] Running in EGLFS so no terminal to kill ..."

else

    for pid in `/bin/pidof rxvt` ; do
        /bin/kill ${pid}
    done

fi
