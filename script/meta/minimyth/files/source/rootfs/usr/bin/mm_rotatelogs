#!/bin/sh

. /etc/rc.d/functions

trap "_exit_" 0 1 2 3 15

_exit_()
{
    ps -o ppid,pid,args \
    | sed -e 's%  *% %g' -e 's%^ %%' -e 's% $%%' \
    | grep "^$$ " \
    | grep '/bin/sleep [^ ]*$' \
    | cut -d ' ' -f 2 \
    | while read pid ; do
        kill $pid
    done
}

if /usr/bin/test `/usr/bin/id -u` -ne 0 ; then
    exit 1
fi

pids=`/bin/pidof mm_rotatelogs`
instances=`/bin/echo ${pids} | /usr/bin/wc -w`
if /usr/bin/test ${instances} -ne 1 ; then
    exit 1
fi

/bin/sleep 300
/usr/bin/logger -t minimyth -p "local0.info" "[mm_rotatelogs] Kicking LOGROTATE.pl for rotating logs"
/usr/bin/perl /usr/bin/logrotate.pl

exit 0

