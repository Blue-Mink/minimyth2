#!/bin/sh

. /etc/rc.d/functions

instances=`ps aux | grep "makemkvcon" | wc -l`
echo ${instances}
if /usr/bin/test ${instances} -gt 1 ; then
    mm_show_mythnotify 'Aktualnie trwa już kopiowanie płyty...' '' 'warning' '10' 'DVD/BluRay'
    exit 1
fi

if /usr/bin/test -n "${MM_OPTICAL_RIP_URL}" ; then
    if /usr/bin/test ! -e /mnt/optical-rip ; then
        mm_show_mythnotify "Kopiowanie DVD/BluRay" "Błąd: katalog dla kopii nie istnieje!" 'error' '10'
        exit 1
    fi
    if /usr/bin/test ! -d /mnt/optical-rip ; then
        mm_show_mythnotify "Kopiowanie DVD/BluRay" "Błąd: ${MM_MEDIA_DVD_RIP_MOUNTPOINT} nie jest katalogiem!" 'error' '10'
        exit 1
    fi
    if /usr/bin/test ! -w /mnt/optical-rip ; then
        mm_show_mythnotify "Kopiowanie DVD/BluRay" "Błąd: ${MM_MEDIA_DVD_RIP_MOUNTPOINT} nie posiada praw zapisu!" 'error' '10'
        exit 1
    fi

    /bin/touch /var/tmp/mm_backup_in_progress
    /bin/rm -f /var/log/makemkv.progress
    /bin/rm -f /var/log/makemkv.done


    mm_show_mythnotify 'Skanuję płytkę...' '' 'images/mythnotify/bluray-drive.png' '10' 'DVD/BluRay'

    makemkvcon --robot --minlength=3600 info disc:${MM_OPTICAL_DRIVE_ID} > /var/log/bluray-disc.info

    title=`cat /var/log/bluray-disc.info | grep "TINFO:0,2,0," | sed -e "s/TINFO:0,2,0,//" -e "s/\"*//g"`
    if /usr/bin/test -z ${title} ; then
        title=`cat /var/log/bluray-disc.info | grep "CINFO:2,0," | sed -e "s/CINFO:2,0,//" -e "s/\"*//g"`
    fi
    if /usr/bin/test -z ${title} ; then
        mm_show_mythnotify "DVD/BluRay: Nie mogę odczytać tytułu!" "Czy płyta jest w napędzie?" 'error' '10'
        /bin/rm -f /var/tmp/mm_backup_in_progress
        /bin/rm -f /var/log/makemkv.progress
        exit 0
    fi
    duration=`cat /var/log/bluray-disc.info | grep "TINFO:0,9,0," | sed -e "s/TINFO:0,9,0,//" -e "s/\"*//g"`
    size=`cat /var/log/bluray-disc.info | grep "TINFO:0,10,0," | sed -e "s/TINFO:0,10,0,//" -e "s/\"*//g"`

    mm_show_mythnotify "'${title}'" "[${duration}] [${size}] Rozpoczynam kopiowanie..." 'images/mythnotify/bluray-drive.png' '10' 'DVD/BluRay'

    makemkvcon --robot --decrypt --noscan --cache=128 --progress=/var/log/makemkv.progress backup disc:${MM_OPTICAL_DRIVE_ID} /mnt/optical-rip/ > /var/log/makemkv.log

    mm_show_mythnotify "'${title}'" "Kopiowanie zakończono z sukcesem..." 'images/mythnotify/bluray-drive.png' '10' 'DVD/BluRay'

    su minimyth -c "/usr/bin/xscreensaver-command --deactivate" & > /dev/null 2>&1

    /bin/rm -f /var/tmp/mm_backup_in_progress
    /bin/rm -f /var/log/makemkv.progress
    /bin/touch /var/log/makemkv.done

    exit 0

else
    mm_show_mythnotify "Kopiowanie DVD/BluRay" "Błąd: W pliku minimyth.conf nie ustawiono katalogu dla kopiowania BluRay/DVD!" 'error' '10'
    exit 1
fi
