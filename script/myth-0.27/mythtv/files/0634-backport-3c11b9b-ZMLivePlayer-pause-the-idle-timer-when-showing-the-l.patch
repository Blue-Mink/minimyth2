From: Paul Harrison <pharrison@mythtv.org>
Date: Sat, 15 Nov 2014 10:05:15 +0000
Subject: [PATCH 1/3] ZMLivePlayer: pause the idle timer when showing the live
 camera's

---
 mythplugins/mythzoneminder/mythzoneminder/zmliveplayer.cpp |    2 ++
 1 file changed, 2 insertions(+)

diff --git a/mythplugins/mythzoneminder/mythzoneminder/zmliveplayer.cpp b/mythplugins/mythzoneminder/mythzoneminder/zmliveplayer.cpp
index 2c51153..15df195 100644
--- a/mythplugins/mythzoneminder/mythzoneminder/zmliveplayer.cpp
+++ b/mythplugins/mythzoneminder/mythzoneminder/zmliveplayer.cpp
@@ -41,6 +41,7 @@ ZMLivePlayer::ZMLivePlayer(MythScreenStack *parent, bool isMiniPlayer)
     ZMClient::get()->setIsMiniPlayerEnabled(false);
 
     GetMythUI()->DoDisableScreensaver();
+    GetMythMainWindow()->PauseIdleTimer(true);
 
     connect(m_frameTimer, SIGNAL(timeout()), this,
             SLOT(updateFrame()));
@@ -162,6 +163,7 @@ ZMLivePlayer::~ZMLivePlayer()
     gCoreContext->SaveSetting("ZoneMinderLiveLayout", m_monitorLayout);
 
     GetMythUI()->DoRestoreScreensaver();
+    GetMythMainWindow()->PauseIdleTimer(false);
 
     if (m_players)
     {
