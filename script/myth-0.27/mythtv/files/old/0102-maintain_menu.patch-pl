+<mythmenu name="MINIMYTH_PROCESS">
+
+   <button>
+      <type>MINIMYTH_RESTART_FRONTEND</type>
+      <text>Zrestartuj Ten Terminal</text>
+      <description>Restartuje (reboot) ten terminal</description>
+      <action>EXEC /usr/bin/mm_manage restart_this_frontend</action>
+   </button>
+
+   <button>
+      <type>MINIMYTH_RESTART_SERVER</type>
+      <text>Zrestartuj Centralny Serwer</text>
+      <description>Restartuje (reboot) centralny serwer MythTV</description>
+      <action>EXEC /usr/bin/mm_manage restart_server</action>
+   </button>
+
+   <button>
+      <type>MINIMYTH_RESTART_BACKEND</type>
+      <text>Zrestartuj Mythbackend</text>
+      <description>Restartuje proces MythTV BACKEND na centralnym serwerze MythTV</description>
+      <action>EXEC /usr/bin/mm_manage restart_backend</action>
+   </button>
+
+   <button>
+      <type>MINIMYTH_RESTART_MYTHFRONTEND</type>
+      <text>Zrestartuj Mythfrontend</text>
+      <description>Restartuje proces MythTV na tym terminalu</description>
+      <action>EXEC /usr/bin/mm_manage restart_mythfrontend</action>
+   </button>
+
+   <button>
+      <type>MINIMYTH_RESTART_XSERVER</type>
+      <text>Zrestartuj Grafikę (X Server)</text>
+      <description>Restartuje X Server na tym terminalu</description>
+      <action>EXEC /usr/bin/mm_manage restart_xserver</action>
+   </button>
+
+</mythmenu>
