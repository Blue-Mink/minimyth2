+      <action>EXEC /usr/bin/mm_manage save_cookiejar</action>
+   </button>
+
+   <button>
+      <type>MINIMYTH_TEST NETWORK SPEED</type>
+      <text>Testuj prędkość sieci LAN</text>
+      <description>Uruchamia NEtPerf i testuje predkość sieci</description>
+      <action>EXEC /usr/bin/mm_manage test_network_speed</action>
+   </button>
+
+   <button>
+      <type>MINIMYTH_GAME_SAVE</type>
+      <text>Zapisz Ustawienia Gier</text>
+      <description>Zapisuje ustawienia gier dla tego terminala</description>
+      <action>EXEC /usr/bin/mm_manage save_game</action>
+   </button>
+
+   <button>
diff -Naur mythtv-0.27-20131205-gf785255-old/mythtv/themes/classic/minimyth_process.xml mythtv-0.27-20131205-gf785255-new/mythtv/themes/classic/minimyth_process.xml
