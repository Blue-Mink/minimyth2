+<mythmenu name="MINIMYTH_MAINTAIN">
+
+   <button>
+      <type>MINIMYTH_CHECK_DB</type>
+      <text>Sprawdź Bazę Danych</text>
+      <description>Sprawdza oraz optymalizuje główną bazę danych MythTV</description>
+      <action>EXEC /usr/bin/mm_manage check_mythtv_db</action>
+   </button>
+
+   <button>
+      <type>MINIMYTH_THEMECACHE_SAVE</type>
+      <text>Zapisz cache skórki</text>
