Subject: [PATCH 7/8] default themes: Add the 'unavailable' state to the
 'playstate' statetype

on MythMusic's currentplaylist button list.
---
 mythplugins/mythmusic/theme/default-wide/music-base.xml |    9 ++++++++-
 mythplugins/mythmusic/theme/default/music-base.xml      |    7 +++++++
 2 files changed, 15 insertions(+), 1 deletion(-)

diff --git a/mythplugins/mythmusic/theme/default-wide/music-base.xml b/mythplugins/mythmusic/theme/default-wide/music-base.xml
index 788c7e3..9716fb0 100644
--- a/mythplugins/mythmusic/theme/default-wide/music-base.xml
+++ b/mythplugins/mythmusic/theme/default-wide/music-base.xml
@@ -210,7 +210,14 @@
                             <position>5,5</position>
                             <filename>mm_stopicon.png</filename>
                         </imagetype>
-                    </state> 
+                    </state>
+                    <state name="unavailable">
+                        <imagetype name="animation">
+                            <position>0,0</position>
+                            <filename>schedule_disabled.png</filename>
+                        </imagetype>
+                    </state>
+
                 </statetype>
 
                 <statetype name="movestate" from="basemovingtracksstate">
diff --git a/mythplugins/mythmusic/theme/default/music-base.xml b/mythplugins/mythmusic/theme/default/music-base.xml
index d221249..aadd681 100644
--- a/mythplugins/mythmusic/theme/default/music-base.xml
+++ b/mythplugins/mythmusic/theme/default/music-base.xml
@@ -53,6 +53,13 @@
                             <filename>mm_stopicon.png</filename>
                         </imagetype>
                     </state>
+                    <state name="unavailable">
+                        <imagetype name="animation">
+                            <position>0,0</position>
+                            <filename>schedule_disabled.png</filename>
+                        </imagetype>
+                    </state>
+
                 </statetype>
 
                 <statetype name="movestate">
