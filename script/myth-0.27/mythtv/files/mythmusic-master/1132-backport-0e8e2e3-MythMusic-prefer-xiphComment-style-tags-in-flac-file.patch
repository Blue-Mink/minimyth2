From 0e8e2e3527ad26d34edb5899300cef0d9e863bce Mon Sep 17 00:00:00 2001
From: Karl Newman <SiliconFiend@gmail.com>
Date: Sun, 17 Nov 2013 12:20:53 +0000
Subject: [PATCH] MythMusic: prefer xiphComment style tags in flac files

Closes #11947.

Signed-off-by: Paul Harrison <pharrison@mythtv.org>
---
 mythtv/libs/libmythmetadata/metaio.cpp |    4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/mythtv/libs/libmythmetadata/metaio.cpp b/mythtv/libs/libmythmetadata/metaio.cpp
index a64e6eb..fd03cc9 100644
--- a/mythtv/libs/libmythmetadata/metaio.cpp
+++ b/mythtv/libs/libmythmetadata/metaio.cpp
@@ -41,13 +41,13 @@ MetaIO* MetaIO::createTagger(const QString& filename)
         return new MetaIOOggVorbis;
     else if (extension == "flac")
     {
-        MetaIOID3 *tagger = new MetaIOID3;
+        MetaIOFLACVorbis *tagger = new MetaIOFLACVorbis;
         if (tagger->TagExists(filename))
             return tagger;
         else
         {
             delete tagger;
-            return new MetaIOFLACVorbis;
+            return new MetaIOID3;
         }
     }
     else if (extension == "m4a")
