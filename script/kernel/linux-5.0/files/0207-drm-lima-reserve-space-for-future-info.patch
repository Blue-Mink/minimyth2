---
 drivers/gpu/drm/lima/lima_drv.c | 1 +
 include/uapi/drm/lima_drm.h     | 2 ++
 2 files changed, 3 insertions(+)

diff --git a/drivers/gpu/drm/lima/lima_drv.c b/drivers/gpu/drm/lima/lima_drv.c
index 04dbcdd..c5876c2 100644
--- a/drivers/gpu/drm/lima/lima_drv.c
+++ b/drivers/gpu/drm/lima/lima_drv.c
@@ -41,6 +41,7 @@ static int lima_ioctl_info(struct drm_device *dev, void *data, struct drm_file *
 		return -ENODEV;
 	}
 	info->num_pp = ldev->pipe[lima_pipe_pp].num_processor;
+	info->valid = 0;
 	return 0;
 }
 
diff --git a/include/uapi/drm/lima_drm.h b/include/uapi/drm/lima_drm.h
index 94704d4..3be9eac 100644
--- a/include/uapi/drm/lima_drm.h
+++ b/include/uapi/drm/lima_drm.h
@@ -16,6 +16,8 @@ extern "C" {
 struct drm_lima_info {
 	__u32 gpu_id;   /* out */
 	__u32 num_pp;   /* out */
+	__u32 valid;    /* out */
+	__u32 _resv[7];
 };
 
 struct drm_lima_gem_create {
