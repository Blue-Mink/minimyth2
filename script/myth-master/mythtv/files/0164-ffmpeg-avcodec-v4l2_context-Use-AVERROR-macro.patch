From 8a8966295fbc9278042f4be76b795fea39f9a810 Mon Sep 17 00:00:00 2001
From: Andriy Gelman <andriy.gelman@gmail.com>
Date: Sun, 12 Jan 2020 23:11:28 -0500
Subject: [PATCH] avcodec/v4l2_context: Use AVERROR macro

Signed-off-by: Andriy Gelman <andriy.gelman@gmail.com>
Signed-off-by: Michael Niedermayer <michael@niedermayer.cc>
---
 libavcodec/v4l2_context.c | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff -Naur mythtv-master-20200116-gdd96d68-old/mythtv/external/FFmpeg/libavcodec/v4l2_context.c mythtv-master-20200116-gdd96d68-old/mythtv/external/FFmpeg/libavcodec/v4l2_context.c
index bdc2b841530..1bfa8b2cec3 100644
--- mythtv-master-20200116-gdd96d68-old/mythtv/external/FFmpeg/libavcodec/v4l2_context.c
+++ mythtv-master-20200116-gdd96d68-old/mythtv/external/FFmpeg/libavcodec/v4l2_context.c
@@ -207,7 +207,7 @@ static int v4l2_handle_event(V4L2Context *ctx)
         ret = ff_v4l2_m2m_codec_full_reinit(s);
         if (ret) {
             av_log(logger(ctx), AV_LOG_ERROR, "v4l2_m2m_codec_full_reinit\n");
-            return -EINVAL;
+            return AVERROR(EINVAL);
         }
         goto reinit_run;
     }
@@ -221,7 +221,7 @@ static int v4l2_handle_event(V4L2Context *ctx)
         ret = ff_v4l2_m2m_codec_reinit(s);
         if (ret) {
             av_log(logger(ctx), AV_LOG_ERROR, "v4l2_m2m_codec_reinit\n");
-            return -EINVAL;
+            return AVERROR(EINVAL);
         }
         goto reinit_run;
     }
