+    m_albumName.clear();
+    m_genreName.clear();
+    m_year.clear();
+    m_isCompilation = false;
+
     m_scanThread = new CDScannerThread(this);
     connect(m_scanThread->qthread(), SIGNAL(finished()), SLOT(ScanFinished()));
     m_scanThread->start();
@@ -814,70 +821,16 @@ void Ripper::ScanFinished()
     delete m_scanThread;
     m_scanThread = nullptr;
 
-    m_tracks->clear();
-
