-        bool isCompilation = false;
-
-        m_artistName.clear();
-        m_albumName.clear();
-        m_genreName.clear();
-        m_year.clear();
-
-        for (int trackno = 0; trackno < m_decoder->getNumTracks(); trackno++)
-        {
-            RipTrack *ripTrack = new RipTrack;
-
-            metadata = m_decoder->getMetadata(trackno + 1);
-            if (metadata)
-            {
