+static void
+lima_pack_clear_plbu_cmd(struct lima_context *ctx)
+{
+   #define lima_clear_render_state_offset 0x0000
+   #define lima_clear_shader_offset       0x0040
+   #define lima_clear_buffer_size         0x0080
