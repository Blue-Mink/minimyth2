################################################################################
# lircrc file for enabling the power button to put the frontend sleep.
################################################################################
begin
    prog = irexec
    button = KEY_POWER
    config = /usr/bin/mm_sleep &
end

begin
    prog = irexec
    button = KEY_SLEEP
    config = /usr/bin/mm_sleep &
end
